<h1>Edit Task</h1>

<% if @task.errors.any? %>
  <h3>Please fix these errors</h3>

  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><% message %></li>
      <% end %>
  </ul>
<% end %>

<h2>Edit Task</h2>
<form action="/tasks/<%= @task.id %>" method="post" style="background-color: lightblue;">
  <input name="_method" type="hidden" value="patch">
  <label for="new_task">Insert task name:</label>
  <input id="new_task" name="name" type="text" value="<%= @task.name %>">
  <label for="new_task_description">Insert task description:</label>
  <input id="new_task_description" name="description" type="text" value="<%= @task.description %>">
  <button>Update task >></button>
</form>
